<div class="tab-pane fade <%= activeTab === 'files' ? 'show active' : '' %>" id="files" role="tabpanel">
  <!-- Header with Title and Add File Button -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="fw-bold text-primary">
      <i class="fas fa-folder me-2"></i>Danh sách File
    </h4>
    <% if (user) { %>
      <button type="button" class="btn btn-gradient btn-primary shadow-sm" data-bs-toggle="modal" data-bs-target="#uploadFileModal">
        <i class="fas fa-upload me-2"></i>Upload File
      </button>
    <% } %>
  </div>

  <!-- Thông báo thành công -->
  <% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success alert-dismissible fade show">
      <i class="fas fa-check-circle me-2"></i><%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <!-- Thông báo lỗi -->
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger alert-dismissible fade show">
      <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <!-- Search Bar -->
  <div class="mb-4 d-flex justify-content-start">
    <form action="/room/<%= room._id %>/files" method="GET" class="w-100" style="max-width: 400px;">
      <div class="input-group">
        <input type="text" name="search" class="form-control rounded-start-pill shadow-sm" 
               placeholder="Tìm file theo tên..." value="<%= search || '' %>">
        <button type="submit" class="btn btn-gradient btn-primary rounded-end-pill">
          <i class="fas fa-search me-1"></i>Tìm
        </button>
      </div>
    </form>
  </div>

  <%
    const isAdmin = room.admin && user && room.admin._id.toString() === user._id.toString();
    const isHost = room.members && room.members.some(m => m.user._id.toString() === user._id.toString() && m.role === 'host');
    const canManage = isAdmin || isHost;
  %>

  <% if (files && files.length > 0) { %>
    <div class="row">
      <% files.forEach(file => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
          <div class="card shadow-lg border-0 h-100 file-card transition-all duration-300 hover:shadow-xl">
            <!-- Gradient Header -->
            <div class="card-header bg-gradient-primary text-white p-3 rounded-top text-center">
              <h6 class="card-title text-truncate fw-semibold mb-3" title="<%= file.fileName %>">
                <%= file.fileName %>
              </h6>
              <div class="file-icon 
                <%= file.fileType === 'pdf' ? 'text-danger' : 
                    file.fileType === 'doc' ? 'text-primary' : 
                    file.fileType === 'image' ? 'text-warning' : 
                    'text-secondary' %>">
                <i class="fas fa-file-<%= file.fileType === 'pdf' ? 'pdf' : 
                                          file.fileType === 'doc' ? 'word' : 
                                          file.fileType === 'image' ? 'image' : 
                                          'alt' %> fa-4x"></i>
              </div>
            </div>
            <div class="card-body p-4 d-flex flex-column justify-content-between">
              <!-- File Info -->
              <ul class="list-unstyled text-muted small mb-3">
                <li class="mb-2">
                  <i class="fas fa-file me-2"></i>
                  <strong>Loại:</strong> 
                  <span class="badge bg-info rounded-pill px-2 py-1">
                    <%= file.fileType.toUpperCase() %>
                  </span>
                </li>
                <li class="mb-2">
                  <i class="fas fa-weight me-2"></i>
                  <strong>Kích thước:</strong> <%= (file.fileSize / 1024).toFixed(1) %> KB
                </li>
                <li class="mb-2">
                  <i class="fas fa-upload me-2"></i>
                  <strong>Ngày tải:</strong> <%= new Date(file.createdAt).toLocaleDateString('vi-VN') %>
                </li>
                <li>
                  <i class="fas fa-user me-2"></i>
                  <strong>Người tải:</strong> <%= file.uploadedBy?.username || "Ẩn danh" %>
                </li>
              </ul>

              <!-- Actions -->
              <div class="d-flex gap-2 mt-2 flex-wrap justify-content-center">
                <!-- Ai cũng được tải file -->
                <a href="<%= file.fileUrl %>" download class="btn btn-sm btn-primary rounded-pill">
                  <i class="fas fa-download me-1"></i>Tải xuống
                </a>

                <!-- Chỉ admin/host mới có quyền sửa/xóa -->
                <% if (canManage) { %>
                  <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill"
                          data-bs-toggle="modal"
                          data-bs-target="#editFileModal<%= file._id %>">
                    <i class="fas fa-edit me-1"></i>Sửa
                  </button>
                  <form action="/room/<%= room._id %>/files/<%= file._id %>/delete" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill"
                            onclick="return confirm('Bạn có chắc chắn muốn xóa file này?')">
                      <i class="fas fa-trash me-1"></i>Xóa
                    </button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <!-- ====================== MODAL SỬA FILE ====================== -->
        <% if (canManage) { %>
        <div class="modal fade" id="editFileModal<%= file._id %>" tabindex="-1" aria-labelledby="editFileModalLabel<%= file._id %>" aria-hidden="true">
          <div class="modal-dialog">
            <form action="/room/<%= room._id %>/files/<%= file._id %>" method="POST">
              <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-gradient-warning text-white">
                  <h5 class="modal-title" id="editFileModalLabel<%= file._id %>">
                    <i class="fas fa-edit me-2"></i>Sửa tên File
                  </h5>
                  <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body p-4">
                  <div class="mb-3">
                    <label class="form-label fw-semibold">Tên file <span class="text-danger">*</span></label>
                    <input type="text" name="fileName" class="form-control" maxlength="200"
                           value="<%= file.fileName %>" required>
                    <small class="text-muted">Tối đa 200 ký tự</small>
                  </div>
                </div>

                <div class="modal-footer">
                  <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Hủy
                  </button>
                  <button type="submit" class="btn btn-gradient btn-warning">
                    <i class="fas fa-save me-1"></i>Lưu thay đổi
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
        <% } %>
      <% }) %>
    </div>
  <% } else { %>
    <div class="text-center text-muted p-5">
      <i class="fas fa-folder-open fa-3x mb-3 text-secondary"></i>
      <p class="fw-semibold">Chưa có file nào được tải lên</p>
    </div>
  <% } %>

  <!-- Pagination -->
  <% if (totalPages > 1) { %>
    <nav aria-label="File pagination" class="mt-4">
      <ul class="pagination justify-content-center">
        <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= page - 1 %>&search=<%= search || '' %>&tab=files">Trước</a>
        </li>
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= page === i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search || '' %>&tab=files"><%= i %></a>
          </li>
        <% } %>
        <li class="page-item <%= page === totalPages ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= page + 1 %>&search=<%= search || '' %>&tab=files">Sau</a>
        </li>
      </ul>
    </nav>
  <% } %>

  <!-- ====================== MODAL UPLOAD FILE ====================== -->
  <% if (user) { %>
  <div class="modal fade" id="uploadFileModal" tabindex="-1" aria-labelledby="uploadFileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <form action="/room/<%= room._id %>/files" method="POST" enctype="multipart/form-data">
        <div class="modal-content border-0 shadow-lg">
          <div class="modal-header bg-gradient-primary text-white">
            <h5 class="modal-title" id="uploadFileModalLabel">
              <i class="fas fa-upload me-2"></i>Upload File mới
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
          </div>

          <div class="modal-body p-4">
            <div class="mb-3">
              <label class="form-label fw-semibold">Chọn file <span class="text-danger">*</span></label>
              <input type="file" name="file" class="form-control" required>
              <small class="text-muted">
                Loại file: PDF, Word, Excel, PowerPoint, Ảnh, Text, Zip<br>
                Kích thước tối đa: 10MB
              </small>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
              <i class="fas fa-times me-1"></i>Hủy
            </button>
            <button type="submit" class="btn btn-gradient btn-primary">
              <i class="fas fa-upload me-1"></i>Upload
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <% } %>
  <!-- ====================== END MODAL UPLOAD ====================== -->
</div>

<style>
  /* Custom styles for file section */
  .bg-gradient-primary {
    background: linear-gradient(135deg, #007bff, #00d4ff);
  }

  .bg-gradient-warning {
    background: linear-gradient(135deg, #ffc107, #ff9800);
  }

  .file-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .file-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2) !important;
  }

  .file-icon {
    transition: transform 0.3s ease;
  }

  .file-icon:hover {
    transform: scale(1.1);
  }

  .card-header {
    border-bottom: none;
  }

  .card-body {
    padding: 1.5rem !important;
  }

  .badge.bg-info {
    background-color: #17a2b8 !important;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .btn-gradient {
    background: linear-gradient(45deg, #007bff, #00d4ff);
    border: none;
    color: white;
  }

  .btn-gradient:hover {
    background: linear-gradient(45deg, #0056b3, #0096cc);
    color: white;
  }

  .btn-gradient.btn-warning {
    background: linear-gradient(45deg, #ffc107, #ff9800);
    color: white;
  }

  .btn-gradient.btn-warning:hover {
    background: linear-gradient(45deg, #e0a800, #e68900);
    color: white;
  }

  .btn-primary, .btn-outline-secondary, .btn-outline-danger {
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .btn-primary:hover, .btn-outline-secondary:hover, .btn-outline-danger:hover {
    transform: scale(1.05);
  }

  .shadow-lg {
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1) !important;
  }

  .shadow-xl {
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15) !important;
  }

  .form-control {
    border: 1px solid #ced4da;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }

  .rounded-start-pill {
    border-top-left-radius: 50rem !important;
    border-bottom-left-radius: 50rem !important;
  }

  .rounded-end-pill {
    border-top-right-radius: 50rem !important;
    border-bottom-right-radius: 50rem !important;
  }

  @media (max-width: 576px) {
    .card-body {
      padding: 1rem !important;
    }
    .file-icon i {
      font-size: 2.5rem;
    }
    .card-title {
      font-size: 1rem;
    }
    .input-group {
      flex-direction: row;
      align-items: center;
    }
    .form-control {
      font-size: 0.9rem;
      padding: 0.5rem;
    }
    .btn-gradient {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>