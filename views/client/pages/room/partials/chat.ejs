<div class="tab-pane fade show active" id="chat" role="tabpanel">
  <div class="chat-container">
    <!-- Header -->
    <div class="chat-header">
      <div class="d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
          <i class="fas fa-comments me-3"></i>
          <h5 class="mb-0">Thảo luận nhóm</h5>
        </div>
        <small class="text-muted">
          <i class="fas fa-circle text-success pulse" style="font-size: 8px;"></i>
          <span id="online-count">0</span> thành viên
        </small>
      </div>
    </div>

    <!-- Online users list -->
    <div class="online-users-section">
      <div class="online-users-header">
        <strong>
          <i class="fas fa-users me-2"></i>
          Thành viên đang online
        </strong>
      </div>
      <div id="online-users-list" class="online-users-list">
        <!-- Users will be added here dynamically -->
      </div>
    </div>

    <!-- Chat messages -->
    <div class="chat-box" id="chat-messages" data-room-id="<%= room._id %>">
      <div class="text-center text-muted py-4">
        <i class="fas fa-spinner fa-spin"></i>
        <p class="mb-0">Đang tải tin nhắn...</p>
      </div>
    </div>

    <!-- Typing indicator -->
    <div id="typing-indicator" class="typing-indicator" style="display: none;">
      <span class="typing-dot"></span>
      <span class="typing-dot"></span>
      <span class="typing-dot"></span>
      <span id="typing-user"></span> đang nhập...
    </div>

    <!-- Chat input -->
    <div class="chat-input">
      <form id="chat-form" class="d-flex gap-2">
        <input 
          id="chat-input" 
          type="text" 
          class="form-control" 
          placeholder="Nhập tin nhắn..." 
          style="border-radius: 25px;"
          autocomplete="off"
          maxlength="1000"
        >
        <button type="submit" class="btn btn-icon btn-primary" id="send-btn">
          <i class="fas fa-paper-plane">Send</i>
        </button>
      </form>
    </div>
  </div>
</div>

<!-- Pass data to JavaScript -->
<script>
  window.currentUserId = "<%= user ? user._id : '' %>";
  window.currentUsername = "<%= user ? user.username : '' %>";
  window.roomId = "<%= room._id %>";
</script>

<!-- Socket.IO -->
<script src="/socket.io/socket.io.js"></script>

<!-- Chat script -->
<script src="/js/chat.js"></script>

