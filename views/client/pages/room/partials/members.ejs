<div class="row">
  <!-- Header -->
  <div class="col-12 mb-3">
    <h4 class="fw-bold text-primary">
      <i class="fas fa-users me-2"></i>List Members
    </h4>
  </div>

  <!-- Search Bar -->
  <div class="col-12 mb-4 d-flex justify-content-start">
    <form action="/room/<%= room._id %>/members" method="GET" class="w-100" style="max-width: 400px;">
      <div class="input-group">
        <input type="text" name="search" class="form-control rounded-start-pill shadow-sm" 
               placeholder="Search member by username" value="<%= search || '' %>">
        <button type="submit" class="btn btn-gradient btn-primary rounded-end-pill">
          <i class="fas fa-search me-1"></i>Search
        </button>
      </div>
    </form>
  </div>

  <% if (members && members.length) { %>
    <div class="col-12">
      <div class="row">
        <% members.forEach(member => { %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-lg border-0 h-100 transition-all duration-300 hover:shadow-xl">
              <!-- Card Header with Role -->
              <div class="card-header bg-gradient-primary text-white p-3 rounded-top">
                <div class="d-flex justify-content-between align-items-center">
                  <h5 class="mb-0 text-truncate" title="<%= member.name %>">
                    <%= member.name %>
                  </h5>
                  <span class="badge rounded-pill <%= member.role === 'admin' ? 'bg-danger' : member.role === 'host' ? 'bg-warning' : 'bg-secondary' %>">
                    <%= member.role.charAt(0).toUpperCase() + member.role.slice(1) %>
                  </span>
                </div>
              </div>

              <!-- Avatar & Info -->
              <div class="card-body p-4 text-center">
                <!-- Avatar chữ cái đầu -->
                <div class="member-avatar mb-3 mx-auto rounded-circle d-flex align-items-center justify-content-center"
                     style="width:60px; height:60px; background: linear-gradient(135deg, #6f42c1, #1c7ed6); color:white; font-size:24px; font-weight:bold;">
                  <%= member.name && member.name[0] ? member.name[0].toUpperCase() : '?' %>
                </div>

                <p class="text-muted mb-3 text-truncate" title="<%= member.name %>">
                  <%= member.name %>
                </p>
                <% 
                  let isHost = false;
                  if (user && room.members) {
                    for (let i = 0; i < room.members.length; i++) {
                      if (room.members[i].user._id == user._id && room.members[i].role === "host") {
                        isHost = true;
                        break;
                      }
                    }
                  }
                %>
              <% if (user && (room.admin._id == user._id || isHost)) { %>
              <% if (member.role === 'member') { %>
                <form action="/room/<%= room._id %>/delete/member/<%= member._id %>" method="POST">
                  <button 
                    class="btn btn-sm btn-outline-danger rounded-pill" 
                    onclick="return confirm('Are you sure you want to delete the member? <%= member.name %>?');">
                   Delte
                  </button>
                </form>
              <% } %>
            <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Total Members -->
      <div class="col-12 text-center mt-3">
        <small class="text-muted">Tổng: <%= members.length %> thành viên</small>
      </div>
    </div>
  <% } else { %>
    <div class="col-12 text-center text-muted p-5">
      <i class="fas fa-users fa-3x mb-3 text-secondary"></i>
      <p class="fw-semibold">No members yet<% if (search) { %> matching the search<% } %></p>
    </div>
  <% } %>

  <!-- Pagination -->
  <% if (totalPages > 1) { %>
    <div class="col-12">
      <nav aria-label="Member pagination" class="mt-4">
        <ul class="pagination justify-content-center">
          <!-- Previous -->
          <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= page - 1 %>&search=<%= search || '' %>" tabindex="-1">Before</a>
          </li>

          <!-- Page Numbers -->
          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= page === i ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>&search=<%= search || '' %>"><%= i %></a>
            </li>
          <% } %>

          <!-- Next -->
          <li class="page-item <%= page === totalPages ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= page + 1 %>&search=<%= search || '' %>">After</a>
          </li>
        </ul>
      </nav>
    </div>
  <% } %>
</div>


<style>
  /* Custom styles for members section (giống notes) */
  .bg-gradient-primary {
    background: linear-gradient(135deg, #007bff, #00d4ff);
  }

  .card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2) !important;
  }

  .card-header {
    border-bottom: none;
  }

  .card-body {
    padding: 1.5rem !important;
  }

  .badge.bg-danger, .badge.bg-warning, .badge.bg-secondary {
    font-size: 0.8rem;
    font-weight: 500;
  }

  .btn-gradient {
    background: linear-gradient(45deg, #007bff, #00d4ff);
    border: none;
  }

  .btn-gradient:hover {
    background: linear-gradient(45deg, #0056b3, #0096cc);
  }

  .shadow-lg {
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1) !important;
  }

  .shadow-xl {
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15) !important;
  }

  .form-control {
    border: 1px solid #ced4da;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }

  .rounded-start-pill {
    border-top-left-radius: 50rem !important;
    border-bottom-left-radius: 50rem !important;
  }

  .rounded-end-pill {
    border-top-right-radius: 50rem !important;
    border-bottom-right-radius: 50rem !important;
  }

  .member-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, #007bff, #00d4ff);
    color: white;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.5rem;
    text-transform: uppercase;
  }

  @media (max-width: 576px) {
    .card-body {
      padding: 1rem !important;
    }
    .card-title {
      font-size: 1rem;
    }
    .badge {
      font-size: 0.7rem;
    }
    .input-group {
      flex-direction: row;
      align-items: center;
    }
    .form-control {
      font-size: 0.9rem;
      padding: 0.5rem;
    }
    .btn-gradient {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
    .member-avatar {
      width: 50px;
      height: 50px;
      font-size: 1.2rem;
    }
  }
</style>