<div class="file-section">
  <!-- Header with Title and Add File Button -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="fw-bold text-primary">
      <i class="fas fa-folder me-2"></i>List File
    </h4>
    <!-- Member trở lên đều có thể thêm file -->
    <% if (user) { %>
      <button class="btn btn-gradient btn-primary shadow-sm">
        <i class="fas fa-plus me-2"></i>Create File
      </button>
    <% } %>
  </div>

  <!-- Search Bar -->
  <div class="mb-4 d-flex justify-content-start">
    <form action="/room/<%= room._id %>/files" method="GET" class="w-100" style="max-width: 400px;">
      <div class="input-group">
        <input type="text" name="search" class="form-control rounded-start-pill shadow-sm" 
               placeholder="Search file by name" value="<%= search || '' %>">
        <button type="submit" class="btn btn-gradient btn-primary rounded-end-pill">
          <i class="fas fa-search me-1"></i>Search
        </button>
      </div>
    </form>
  </div>

  <% if (files && files.length) { %>
    <div class="row">
      <% files.forEach(file => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
          <div class="card shadow-lg border-0 h-100 file-card transition-all duration-300 hover:shadow-xl">
            <!-- Gradient Header -->
            <div class="card-header bg-gradient-primary text-white p-3 rounded-top text-center">
              <h6 class="card-title text-truncate fw-semibold mb-3" title="<%= file.fileName %>">
                <%= file.fileName %>
              </h6>
              <div class="file-icon 
                <%= file.fileType === 'pdf' ? 'text-danger' : 
                    file.fileType === 'doc' ? 'text-primary' : 
                    file.fileType === 'image' ? 'text-warning' : 
                    'text-secondary' %>">
                <i class="fas fa-file-<%= file.fileType === 'pdf' ? 'pdf' : 
                                          file.fileType === 'doc' ? 'word' : 
                                          file.fileType === 'image' ? 'image' : 
                                          'alt' %> fa-4x"></i>
              </div>
            </div>
            <div class="card-body p-4 d-flex flex-column justify-content-between">
              <!-- File Info -->
              <ul class="list-unstyled text-muted small mb-3">
                <li class="mb-2">
                  <i class="fas fa-file me-2"></i>
                  <strong>Type:</strong> 
                  <span class="badge bg-info rounded-pill px-2 py-1">
                    <%= file.fileType.toUpperCase() %>
                  </span>
                </li>
                <li class="mb-2">
                  <i class="fas fa-weight me-2"></i>
                  <strong>Size:</strong> <%= (file.fileSize / 1024).toFixed(1) %> KB
                </li>
                <li class="mb-2">
                  <i class="fas fa-upload me-2"></i>
                  <strong>Upload:</strong> <%= new Date(file.createdAt).toLocaleDateString('vi-VN') %>
                </li>
                <li>
                  <i class="fas fa-user me-2"></i>
                  <strong>Uploader:</strong> <%= file.uploadedBy?.username || "Ẩn danh" %>
                </li>
              </ul>

              <!-- Actions -->
              <div class="d-flex gap-2 mt-2 flex-wrap justify-content-center">
                <!-- Ai cũng được tải file -->
                <a href="<%= file.fileUrl %>" download class="btn btn-sm btn-primary rounded-pill">
                  <i class="fas fa-download me-1"></i>Dowload
                </a>

                <!-- Chỉ admin phòng / host phòng mới có quyền sửa/xóa -->
                <% 
                  let isHost = false;
                  if (user && room.members) {
                    for (let i = 0; i < room.members.length; i++) {
                      if (room.members[i].user._id == user._id && room.members[i].role === "host") {
                        isHost = true;
                        break;
                      }
                    }
                  }
                %>
                <% if (user && (room.admin._id == user._id || isHost)) { %>
                  <button class="btn btn-sm btn-outline-secondary rounded-pill">
                    <i class="fas fa-edit me-1"></i>Edit
                  </button>
                  <button class="btn btn-sm btn-outline-danger rounded-pill">
                    <i class="fas fa-trash me-1"></i>Delete
                  </button>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="text-center text-muted p-5">
      <i class="fas fa-folder-open fa-3x mb-3 text-secondary"></i>
      <p class="fw-semibold">No files have been uploaded yet</p>
    </div>
  <% } %>

  <!-- Pagination -->
  <% if (totalPages > 1) { %>
    <nav aria-label="File pagination" class="mt-4">
      <ul class="pagination justify-content-center">
        <!-- Previous Button -->
        <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= page - 1 %>&search=<%= search || '' %>" tabindex="-1">Before</a>
        </li>

        <!-- Page Numbers -->
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= page === i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search || '' %>"><%= i %></a>
          </li>
        <% } %>

        <!-- Next Button -->
        <li class="page-item <%= page === totalPages ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= page + 1 %>&search=<%= search || '' %>">After</a>
        </li>
      </ul>
    </nav>
  <% } %>
</div>

<style>
  /* Custom styles for file section */
  .bg-gradient-primary {
    background: linear-gradient(135deg, #007bff, #00d4ff);
  }

  .file-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .file-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2) !important;
  }

  .file-icon {
    transition: transform 0.3s ease;
  }

  .file-icon:hover {
    transform: scale(1.1);
  }

  .card-header {
    border-bottom: none;
  }

  .card-body {
    padding: 1.5rem !important;
  }

  .badge.bg-info {
    background-color: #17a2b8 !important;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .btn-gradient {
    background: linear-gradient(45deg, #007bff, #00d4ff);
    border: none;
  }

  .btn-gradient:hover {
    background: linear-gradient(45deg, #0056b3, #0096cc);
  }

  .btn-primary, .btn-outline-secondary, .btn-outline-danger {
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .btn-primary:hover, .btn-outline-secondary:hover, .btn-outline-danger:hover {
    transform: scale(1.05);
  }

  .shadow-lg {
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1) !important;
  }

  .shadow-xl {
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15) !important;
  }

  .form-control {
    border: 1px solid #ced4da;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }

  .rounded-start-pill {
    border-top-left-radius: 50rem !important;
    border-bottom-left-radius: 50rem !important;
  }

  .rounded-end-pill {
    border-top-right-radius: 50rem !important;
    border-bottom-right-radius: 50rem !important;
  }

  @media (max-width: 576px) {
    .card-body {
      padding: 1rem !important;
    }
    .file-icon i {
      font-size: 2.5rem;
    }
    .card-title {
      font-size: 1rem;
    }
    .input-group {
      flex-direction: row;
      align-items: center;
    }
    .form-control {
      font-size: 0.9rem;
      padding: 0.5rem;
    }
    .btn-gradient {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>
