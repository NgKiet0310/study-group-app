<% if (files && files.length) { %>
  <% files.forEach(file => { %>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
      <div class="card card-enhanced text-center">
        <div class="card-body">
          <div class="files-icon 
            <%= file.fileType === 'pdf' ? 'text-danger' : 
                file.fileType === 'doc' ? 'text-info' : 
                file.fileType === 'image' ? 'text-warning' : 
                'text-secondary' %>">
            <i class="fas fa-files-<%= file.fileType === 'pdf' ? 'pdf' : 
                                      file.fileType === 'doc' ? 'word' : 
                                      file.fileType === 'image' ? 'image' : 
                                      'alt' %>"></i>
          </div>

          <h6 class="card-title"><%= file.fileName %></h6>

          <p class="text-muted small">
            <%= (file.fileSize / 1024).toFixed(1) %> KB • <%= file.fileType.toUpperCase() %>
          </p>

          <small class="text-muted d-block mb-3">
            Tải lên: <%= new Date(file.createdAt).toLocaleDateString('vi-VN') %><br>
            Bởi: <%= file.uploadedBy?.username || "Ẩn danh" %>
          </small>

          <div class="d-flex gap-1 justify-content-center">
            <a href="<%= file.fileUrl %>" download class="btn btn-sm btn-primary">
              <i class="fas fa-download"></i>
            </a>
            <a href="<%= file.fileUrl %>" target="_blank" class="btn btn-sm btn-outline-primary">
              <i class="fas fa-eye"></i>
            </a>
            <button class="btn btn-sm btn-outline-secondary">
              <i class="fas fa-share"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
<% } else { %>
  <p>Chưa có file nào</p>
<% } %>
