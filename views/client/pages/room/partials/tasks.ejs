<div class="tab-pane fade <%= activeTab === 'tasks' ? 'show active' : '' %>" id="tasks" role="tabpanel">
  <!-- Header with Title and Add Task Button -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="fw-bold text-primary">
      <i class="fas fa-tasks me-2"></i>List Task
    </h4>
    <% 
      const isAdmin = room.admin && user && room.admin._id.toString() === user._id.toString();
      const isHost = room.members && room.members.some(m => m.user._id.toString() === user._id.toString() && m.role === 'host');
      const canManage = isAdmin || isHost;
    %>
    <% if (canManage) { %>
      <button class="btn btn-gradient btn-primary shadow-sm">
        <i class="fas fa-plus me-2"></i>Create Task
      </button>
    <% } %>
  </div>

  <!-- Search Bar -->
  <div class="mb-4 d-flex justify-content-start">
    <form action="/room/<%= room._id %>/tasks" method="GET" class="w-100" style="max-width: 400px;">
      <div class="input-group">
        <input type="text" name="search" class="form-control rounded-start-pill shadow-sm" 
               placeholder="Search task by title..." value="<%= search || '' %>">
        <button type="submit" class="btn btn-gradient btn-primary rounded-end-pill">
          <i class="fas fa-search me-1"></i>Search
        </button>
      </div>
    </form>
  </div>

  <div class="row">
    <% if (tasks && tasks.length > 0) { %>
      <% tasks.forEach(task => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100 border-0 shadow-lg transition-all duration-300 hover:shadow-xl">
            <!-- Header with gradient -->
            <div class="card-header bg-gradient-primary text-white p-3 rounded-top">
              <h5 class="card-title text-truncate fw-semibold mb-0">
                <i class="fas fa-clipboard-list me-2"></i><%= task.title %>
              </h5>
            </div>
            <div class="card-body d-flex flex-column p-4">
              <!-- Status and Due Date at the top -->
              <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                  <i class="fas fa-calendar-alt me-2 text-primary"></i>
                  <strong>Expiry Date:</strong> <%= task.dueDate %>
                </div>
                <% if (task.statusText === "Completed") { %>
                  <span class="badge rounded-pill bg-success px-3 py-2 shadow-sm">
                    <i class="fas fa-check-circle me-1"></i><%= task.statusText %>
                  </span>
                <% } else if (task.statusText === "Overdue") { %>
                  <span class="badge rounded-pill bg-danger px-3 py-2 shadow-sm">
                    <i class="fas fa-exclamation-triangle me-1"></i><%= task.statusText %>
                  </span>
                <% } else if (task.statusText === "In progress") { %>
                  <span class="badge rounded-pill bg-warning text-dark px-3 py-2 shadow-sm">
                    <i class="fas fa-spinner me-1"></i><%= task.statusText %>
                  </span>
                <% } else { %>
                  <span class="badge rounded-pill bg-secondary px-3 py-2 shadow-sm">
                    <i class="fas fa-hourglass-start me-1"></i><%= task.statusText %>
                  </span>
                <% } %>
              </div>

              <!-- Description -->
              <p class="text-muted small mb-3 text-truncate" title="<%= task.description %>">
                <%= task.description.length > 100 ? task.description.substring(0, 100) + '...' : task.description %>
              </p>

              <!-- Other details -->
              <ul class="list-unstyled mb-3 small">
                <li class="mb-2">
                  <i class="fas fa-user me-2 text-secondary"></i>
                  <strong>Created by:</strong> <%= task.createdBy || 'Ẩn danh' %>
                </li>
                <li class="mb-2">
                  <i class="fas fa-users me-2 text-secondary"></i>
                  <strong>Assigned to:</strong> <%= task.assignedTo  || 'Chưa giao' %>
                </li>
                <li>
                  <i class="fas fa-clock me-2 text-secondary"></i>
                  <strong>Created on:</strong> <%= task.createdAt %>
                </li>
              </ul>

              <!-- Action buttons -->
              <div class="d-flex gap-2 mt-auto flex-wrap">
                <button class="btn btn-sm btn-primary rounded-pill">
                  <i class="fas fa-eye me-1"></i>See
                </button>
                <% if (canManage) { %>
                  <button class="btn btn-sm btn-outline-secondary rounded-pill">
                    <i class="fas fa-edit me-1"></i>Edit
                  </button>
                  <button class="btn btn-sm btn-outline-danger rounded-pill">
                    <i class="fas fa-trash me-1"></i>Delete
                  </button>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12 text-center text-muted py-5">
        <i class="fas fa-tasks fa-3x mb-3 text-secondary"></i>
        <p class="fw-semibold">No tasks yet</p>
      </div>
    <% } %>
  </div>

  <!-- Pagination -->
  <% if (totalPages > 1) { %>
    <nav aria-label="Task pagination" class="mt-4">
      <ul class="pagination justify-content-center">
        <!-- Previous Button -->
        <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= page - 1 %>&search=<%= search || '' %>" tabindex="-1">Before</a>
        </li>

        <!-- Page Numbers -->
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= page === i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search || '' %>"><%= i %></a>
          </li>
        <% } %>

        <!-- Next Button -->
        <li class="page-item <%= page === totalPages ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= page + 1 %>&search=<%= search || '' %>">After</a>
        </li>
      </ul>
    </nav>
  <% } %>
</div>

<style>
  /* Custom styles for tasks section */
  .bg-gradient-primary {
    background: linear-gradient(135deg, #007bff, #00d4ff);
  }

  .card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2) !important;
  }

  .card-header {
    border-bottom: none;
  }

  .card-body {
    padding: 1.5rem !important;
  }

  .badge {
    font-size: 0.8rem;
    font-weight: 500;
  }

  .badge.bg-success {
    background-color: #28a745 !important;
  }

  .badge.bg-danger {
    background-color: #dc3545 !important;
  }

  .badge.bg-warning {
    background-color: #ffc107 !important;
  }

  .badge.bg-secondary {
    background-color: #6c757d !important;
  }

  .btn-gradient {
    background: linear-gradient(45deg, #007bff, #00d4ff);
    border: none;
  }

  .btn-gradient:hover {
    background: linear-gradient(45deg, #0056b3, #0096cc);
  }

  .btn-primary, .btn-outline-secondary, .btn-outline-danger {
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .btn-primary:hover, .btn-outline-secondary:hover, .btn-outline-danger:hover {
    transform: scale(1.05);
  }

  .shadow-lg {
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1) !important;
  }

  .shadow-xl {
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15) !important;
  }

  .form-control {
    border: 1px solid #ced4da;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }

  .rounded-start-pill {
    border-top-left-radius: 50rem !important;
    border-bottom-left-radius: 50rem !important;
  }

  .rounded-end-pill {
    border-top-right-radius: 50rem !important;
    border-bottom-right-radius: 50rem !important;
  }

  @media (max-width: 576px) {
    .card-body {
      padding: 1rem !important;
    }
    .card-title {
      font-size: 1rem;
    }
    .badge {
      font-size: 0.7rem;
    }
    .input-group {
      flex-direction: row;
      align-items: center;
    }
    .form-control {
      font-size: 0.9rem;
      padding: 0.5rem;
    }
    .btn-gradient {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>
