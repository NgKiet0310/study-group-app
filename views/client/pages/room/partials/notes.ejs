<div class="tab-pane fade <%= activeTab === 'notes' ? 'show active' : '' %>" id="notes" role="tabpanel">
  <!-- Header with Title and Add Note Button -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="fw-bold text-primary">
      <i class="fas fa-sticky-note me-2"></i>List Note
    </h4>
    <% 
      const isAdmin = room.admin && user && room.admin._id.toString() === user._id.toString();
      const isHost = room.members && room.members.some(m => m.user._id.toString() === user._id.toString() && m.role === 'host');
      const canManage = isAdmin || isHost;
    %>
    <% if (canManage) { %>
      <button class="btn btn-gradient btn-primary shadow-sm">
        <i class="fas fa-plus me-2"></i>Create Note
      </button>
    <% } %>
  </div>

  <!-- Search Bar -->
  <div class="mb-4 d-flex justify-content-start">
    <form action="/room/<%= room._id %>/notes" method="GET" class="w-100" style="max-width: 400px;">
      <div class="input-group">
        <input type="text" name="search" class="form-control rounded-start-pill shadow-sm" 
               placeholder="Search note by title" value="<%= search || '' %>">
        <button type="submit" class="btn btn-gradient btn-primary rounded-end-pill">
          <i class="fas fa-search me-1"></i>Search
        </button>
      </div>
    </form>
  </div>

  <div class="row">
    <% if (notes && notes.length) { %>
      <% notes.forEach(note => { %>
        <% if (note.isPublic || canManage) { %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-lg border-0 h-100 transition-all duration-300 hover:shadow-xl">
              <!-- Gradient Header -->
              <div class="card-header bg-gradient-primary text-white p-3 rounded-top">
                <div class="d-flex justify-content-between align-items-center">
                  <h5 class="mb-0 text-truncate" title="<%= note.title %>">
                    <%= note.title %>
                  </h5>
                  <span class="badge rounded-pill <%= note.isPublic ? 'bg-info' : 'bg-secondary' %>">
                    <%= note.isPublic ? 'Public' : 'Anonymous' %>
                  </span>
                </div>
              </div>
              <div class="card-body p-4">
                <p class="text-muted mb-3 text-truncate" title="<%= note.content %>">
                  <%= note.content.length > 100 ? note.content.substring(0, 100) + '...' : note.content %>
                </p>
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                  <small class="text-muted">
                    <i class="fas fa-user me-1"></i><%= note.createdBy?.username || 'Anonymous' %>
                    <br />
                    <i class="fas fa-clock me-1"></i>
                    <%= note.createdAt %>
                  </small>
                  <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-primary rounded-pill">
                      <i class="fas fa-eye me-1"></i>See
                    </button>
                    <% if (canManage) { %>
                      <button class="btn btn-sm btn-outline-secondary rounded-pill">
                        <i class="fas fa-edit me-1"></i>Edit
                      </button>
                      <button class="btn btn-sm btn-outline-danger rounded-pill">
                        <i class="fas fa-trash me-1"></i>Delete
                      </button>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      <% }) %>
    <% } else { %>
      <div class="col-12 text-center text-muted p-5">
        <i class="fas fa-sticky-note fa-3x mb-3 text-secondary"></i>
        <p class="fw-semibold">No notes yet</p>
      </div>
    <% } %>
  </div>

  <!-- Pagination -->
  <% if (totalPages > 1) { %>
    <nav aria-label="Note pagination" class="mt-4">
      <ul class="pagination justify-content-center">
        <!-- Previous Button -->
        <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= page - 1 %>&search=<%= search || '' %>" tabindex="-1">Before</a>
        </li>

        <!-- Page Numbers -->
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= page === i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search || '' %>"><%= i %></a>
          </li>
        <% } %>

        <!-- Next Button -->
        <li class="page-item <%= page === totalPages ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= page + 1 %>&search=<%= search || '' %>">After</a>
        </li>
      </ul>
    </nav>
  <% } %>
</div>

<style>
  /* Custom styles for notes section */
  .bg-gradient-primary {
    background: linear-gradient(135deg, #007bff, #00d4ff);
  }

  .card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2) !important;
  }

  .card-header {
    border-bottom: none;
  }

  .card-body {
    padding: 1.5rem !important;
  }

  .badge.bg-info {
    background-color: #17a2b8 !important;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .badge.bg-secondary {
    background-color: #6c757d !important;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .btn-gradient {
    background: linear-gradient(45deg, #007bff, #00d4ff);
    border: none;
  }

  .btn-gradient:hover {
    background: linear-gradient(45deg, #0056b3, #0096cc);
  }

  .btn-primary, .btn-outline-secondary, .btn-outline-danger {
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .btn-primary:hover, .btn-outline-secondary:hover, .btn-outline-danger:hover {
    transform: scale(1.05);
  }

  .shadow-lg {
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1) !important;
  }

  .shadow-xl {
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15) !important;
  }

  .form-control {
    border: 1px solid #ced4da;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }

  .rounded-start-pill {
    border-top-left-radius: 50rem !important;
    border-bottom-left-radius: 50rem !important;
  }

  .rounded-end-pill {
    border-top-right-radius: 50rem !important;
    border-bottom-right-radius: 50rem !important;
  }

  @media (max-width: 576px) {
    .card-body {
      padding: 1rem !important;
    }
    .card-title {
      font-size: 1rem;
    }
    .badge {
      font-size: 0.7rem;
    }
    .input-group {
      flex-direction: row;
      align-items: center;
    }
    .form-control {
      font-size: 0.9rem;
      padding: 0.5rem;
    }
    .btn-gradient {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>
