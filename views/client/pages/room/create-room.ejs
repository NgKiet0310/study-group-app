<%- layout('layouts/main-client') %>

<!-- Hiển thị thông báo lỗi nếu có -->
<% if (typeof error !== "undefined" && error) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<!-- Hiển thị thông báo thành công nếu có -->
<% if (typeof success !== "undefined" && success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="fas fa-check-circle me-2"></i><%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<!-- Main Content -->
<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <!-- Header Section -->
      <div class="text-center mb-5">
        <div class="create-room-icon mb-3">
          <i class="fas fa-plus-circle text-primary" style="font-size: 3rem;"></i>
        </div>
        <h1 class="display-5 fw-bold text-primary mb-3">
         Create a new classroom
        </h1>
        <p class="lead text-muted">
          Create a study space to connect and share knowledge with friends
        </p>
      </div>

      <!-- Create Room Form -->
      <div class="card shadow-lg border-0">
        <div class="card-header bg-gradient-primary text-white py-4">
          <h3 class="card-title mb-0 text-center">
            <i class="fas fa-cog me-2"></i>Classroom information
          </h3>
        </div>
        
        <div class="card-body p-4">
          <form action="/create-room" method="POST" id="createRoomForm">
            
            <!-- Tên phòng -->
            <div class="row mb-4">
              <div class="col-12">
                <label for="name" class="form-label fw-bold">
                  <i class="fas fa-bookmark me-2 text-primary"></i>Name Classroom *
                </label>
                <input type="text" 
                  class="form-control form-control-lg" 
                  id="name" 
                  name="name" 
                  value="<%= oldInput?.name || '' %>"
                  required
                  maxlength="100">
                  <% if (errors) { %>
                  <% errors.forEach(err => { if (err.path === 'name') { %>
                    <div class="text-danger mt-1"><%= err.msg %></div>
                  <% } }) %>
                <% } %>

                <div class="form-text">
                  <i class="fas fa-info-circle me-1"></i>
                  Room names must be unique and cannot exceed 100 characters.
                </div>
              </div>
            </div>

            <!-- Mô tả phòng -->
            <div class="row mb-4">
              <div class="col-12">
                <label for="description" class="form-label fw-bold">
                  <i class="fas fa-align-left me-2 text-primary"></i>Description Classroom
                </label>
               <textarea class="form-control" 
                  id="description" 
                  name="description" 
                  rows="4" 
                  maxlength="500"><%= oldInput?.description || '' %></textarea>
                  <% if (errors) { %>
                    <% errors.forEach(err => { if (err.path === 'description') { %>
                      <div class="text-danger mt-1"><%= err.msg %></div>
                    <% } }) %>
                  <% } %>

                <div class="form-text">
                  <i class="fas fa-info-circle me-1"></i>
                  Maximum 500 characters. Description helps members better understand the classroom
                </div>
              </div>
            </div>

            <!-- Buttons -->
            <div class="row">
              <div class="col-12">
                <div class="d-flex gap-3 justify-content-center">
                  <button type="submit" class="btn btn-primary btn-lg px-4">
                    <i class="fas fa-save me-2"></i>Create Classroom
                  </button>
                  <a href="/home" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="fas fa-arrow-left me-2"></i>Back
                  </a>
                </div>
              </div>
            </div>

          </form>
        </div>
      </div>

      <!-- Thông tin bổ sung -->
      <div class="row mt-4">
        <div class="col-md-6">
          <div class="card h-100 border-0 bg-light">
            <div class="card-body text-center">
              <i class="fas fa-crown text-warning fa-2x mb-3"></i>
              <h5>Admin Rights</h5>
              <p class="text-muted small mb-0">
                You will be the Admin of this classroom and have full management rights
              </p>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card h-100 border-0 bg-light">
            <div class="card-body text-center">
              <i class="fas fa-key text-info fa-2x mb-3"></i>
              <h5>Automatic room code</h5>
              <p class="text-muted small mb-0">
               The system will automatically generate a unique room code to share with members.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Custom Styles -->
<style>
/* Gradient background cho header */
.bg-gradient-primary {
  background: linear-gradient(45deg, #007bff, #6f42c1) !important;
}

/* Custom form controls */
.form-control:focus, .form-select:focus {
  border-color: #007bff;
  box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

/* Member item styles */
.member-item {
  background: white;
  border: 1px solid #dee2e6;
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 10px;
  transition: all 0.3s ease;
}

.member-item:hover {
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  transform: translateY(-1px);
}

.role-badge {
  font-size: 0.75rem;
  padding: 4px 8px;
}

/* Animation cho các thành viên mới được thêm */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.member-item.new-added {
  animation: slideInUp 0.3s ease;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .display-5 {
    font-size: 2rem;
  }
  
  .card-body {
    padding: 1.5rem !important;
  }
}
</style>

