<div class="container">
  <h1 class="display-5 fw-bold mb-4">Create Room</h1>
  <div class="card shadow-lg border-0">
    <div class="card-body p-4">
      <form action="/api/rooms" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label fw-medium">Room Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter room name" required>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label fw-medium">Description</label>
          <textarea class="form-control" id="description" name="description" rows="5" placeholder="Enter description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100">Create Room</button>
      </form>
    </div>
  </div>
</div>