<div class="container">
  <h1 class="display-5 fw-bold mb-4">Room</h1>
  <ul class="nav nav-tabs mb-4" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="chat-tab" data-bs-toggle="tab" href="#chat" role="tab">Chat</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="notes-tab" data-bs-toggle="tab" href="#notes" role="tab">Notes</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="schedules-tab" data-bs-toggle="tab" href="#schedules" role="tab">Schedules</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="members-tab" data-bs-toggle="tab" href="#members" role="tab">Members</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="files-tab" data-bs-toggle="tab" href="#files" role="tab">Files</a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane fade show active" id="chat" role="tabpanel">
      <div class="card shadow-sm mb-4">
        <div class="card-body p-3">
          <div id="chat-box" class="border rounded p-3 mb-3" style="height: 400px; overflow-y: auto;">
            <div class="chat-message d-flex mb-2">
              <span class="badge bg-primary rounded-circle me-2">U1</span>
              <div><strong>User1:</strong> Hello, everyone! <small class="text-muted ms-2">10:30 AM</small></div>
            </div>
            <div class="chat-message d-flex mb-2">
              <span class="badge bg-secondary rounded-circle me-2">U2</span>
              <div><strong>User2:</strong> Hi! Ready to study? <small class="text-muted ms-2">10:32 AM</small></div>
            </div>
          </div>
          <form action="/api/chat" method="POST" class="input-group">
            <input type="text" class="form-control" placeholder="Type a message" name="message" required>
            <button class="btn btn-primary" type="submit">Send</button>
          </form>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="notes" role="tabpanel">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h5 class="mb-3 fw-bold">Add Note</h5>
          <form action="/api/notes" method="POST">
            <div class="mb-3">
              <input type="text" class="form-control" placeholder="Note title" name="title" required>
            </div>
            <div class="mb-3">
              <textarea class="form-control" placeholder="Note content" name="content" rows="5" required></textarea>
            </div>
            <button class="btn btn-primary" type="submit">Add Note</button>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">Note 1</h5>
              <p class="card-text">Sample note content.</p>
              <button class="btn btn-warning btn-sm me-2" onclick="alert('Edit note')">Edit</button>
              <button class="btn btn-danger btn-sm" onclick="deleteNote('n1')">Delete</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="schedules" role="tabpanel">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h5 class="mb-3 fw-bold">Add Schedule</h5>
          <form action="/api/schedules" method="POST">
            <div class="mb-3">
              <input type="text" class="form-control" placeholder="Schedule title" name="title" required>
            </div>
            <div class="mb-3">
              <input type="datetime-local" class="form-control" name="date" required>
            </div>
            <button class="btn btn-primary" type="submit">Add Schedule</button>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">Schedule 1</h5>
              <p class="card-text">2025-07-15 10:00 AM</p>
              <button class="btn btn-warning btn-sm me-2" onclick="alert('Edit schedule')">Edit</button>
              <button class="btn btn-danger btn-sm" onclick="deleteSchedule('s1')">Delete</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="members" role="tabpanel">
      <div class="table-responsive">
        <table class="table table-hover table-bordered">
          <thead class="table-light">
            <tr>
              <th>Username</th>
              <th>Role</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>User1</td>
              <td>Member</td>
              <td>
                <button class="btn btn-warning btn-sm me-2" onclick="changeRole('u1', 'Admin')">Make Admin</button>
                <button class="btn btn-danger btn-sm" onclick="removeMember('u1')">Remove</button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="tab-pane fade" id="files" role="tabpanel">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h5 class="mb-3 fw-bold">Upload File</h5>
          <form action="/api/files" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <input type="file" class="form-control" name="file" required>
            </div>
            <button class="btn btn-primary" type="submit">Upload File</button>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">File 1</h5>
              <p class="card-text">Uploaded: 2025-07-10</p>
              <button class="btn btn-warning btn-sm me-2" onclick="alert('Edit file')">Edit</button>
              <button class="btn btn-danger btn-sm" onclick="deleteFile('f1')">Delete</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>