<% layout('layouts/main-admin') %>
<div class="container">
  <h1 class="display-5 fw-bold mb-4">Admin Dashboard</h1>
  <div class="row mb-5">
    <div class="col-md-4 mb-4">
      <div class="card shadow-lg border-0 h-100">
        <div class="card-body text-center">
          <h3 class="display-5 fw-bold text-primary">10</h3>
          <p class="card-text text-muted">Total Rooms</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card shadow-lg border-0 h-100">
        <div class="card-body text-center">
          <h3 class="display-5 fw-bold text-primary">25</h3>
          <p class="card-text text-muted">Total Notes</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card shadow-lg border-0 h-100">
        <div class="card-body text-center">
          <h3 class="display-5 fw-bold text-primary">15</h3>
          <p class="card-text text-muted">Total Schedules</p>
        </div>
      </div>
    </div>
  </div>
  <h2 class="mb-4">Your Rooms</h2>
  <div class="row g-4">
    <% if (rooms && rooms.length > 0) { %>
      <% rooms.forEach(room => { %>
        <div class="col-md-4">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title"><a href="/admin/room/<%= room._id %>" class="text-decoration-none text-dark"><%= room.name %></a></h5>
              <p class="card-text text-muted">Manage your study group.</p>
              <a href="/admin/room/<%= room._id %>" class="btn btn-outline-primary btn-sm">Manage</a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <p class="text-muted">No rooms available.</p>
      </div>
    <% } %>
  </div>
</div>